<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--声明一个属性集 名称-->
    <declare-styleable name="CircleNavigationView" >
        <!--声明圆形导航控件的半径大小属性-->
        <attr name="radius" format="dimension" />

        <!--声明一个角度属性-->
        <attr name="angle" format="float" />

        <!--声明有多少个子item属性-->
        <attr name="items" format="integer" />

        <attr name="text_size" format="dimension" />
        <attr name="line_width" format="float" />
        <attr name="up_text" format="string" />
        <attr name="down_text" format="string" />
        <attr name="left_text" format="string" />
        <attr name="right_text" format="string" />

        <!--圆形背景色-->
        <attr name="home_background_color" format="color" />

        <!--圆形背景透明度-->
        <attr name="home_alpha" format="float" />
    </declare-styleable>
</resources>